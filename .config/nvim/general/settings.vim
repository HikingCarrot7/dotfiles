if !exists('g:vscode')
    let g:mapleader = "\<Space>"
endi

syntax enable

set number
set colorcolumn=81
set laststatus=0
set smartindent
set autoindent
set expandtab
set smarttab
set tabstop=4
set shiftwidth=4
set showtabline=4
set formatoptions-=cro
set hidden
set nowrap
set encoding=utf-8
set fileencoding=utf-8
set mouse=a
set ruler
set cursorline
set splitbelow
set splitright
set clipboard=unnamedplus
set background=dark
set autochdir

filetype on
filetype indent on
filetype plugin on

